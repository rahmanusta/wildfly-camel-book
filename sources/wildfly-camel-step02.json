{
id: "wildfly-camel-rest",
kind: "Config",
apiVersion: "v1beta1",
name: "wildfly-camel-rest",
description: "Creates a WildFly Camel Pod running the Rest example",
items: [
    {
      "id": "restSlaveController",
      "kind": "ReplicationController",
      "apiVersion": "v1beta1",
      "desiredState": {
        "replicas": 3,
        "replicaSelector": {"name": "camel"},
        "podTemplate": {
          "desiredState": {
             "manifest": {
               "id": "restSlaveController",
               "version": "v1beta1",
               "containers": [{
                 "name": "camel-pod",
                 "image": "wildflyext/example-camel-rest",
	             "ports": [{ "name": "http", "containerPort": 8080 }]
               }]
             }
           },
           "labels": {"name": "camel"}
          }},
      "labels": {"name": "camel"}
    }]
}